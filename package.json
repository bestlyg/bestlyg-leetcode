{
  "name": "bestlyg-leetcode",
  "version": "1.0.0",
  "description": "个人LeetCode题解",
  "main": "index.js",
  "scripts": {
    "dev:docs": "vuepress dev .",
    "build:docs": "vuepress build .",
    "format": "prettier --write .",
    "create:env": "ts-node scripts/create-env",
    "create:markdown": "ts-node scripts/create-markdown",
    "create:solutions": "ts-node scripts/create-solutions",
    "create:readme": "ts-node scripts/create-readme",
    "run:js": "node temp/index.js",
    "run:ts": "ts-node temp/index.ts",
    "run:ts:deno": "deno run temp/index.ts",
    "commit": "git-cz",
    "push": "git-cz && git push origin master",
    "push:auto": "git pull && npm run create:readme && npm run format && git add -A && git-cz && git push -u origin master",
    "push:auto:markdown": "npm run create:markdown && npm run push:auto",
    "push:auto:solutions": "npm run create:solutions && npm run push:auto"
  },
  "repository": {
    "type": "git",
    "url": "https://gitee.com/bestlyg/bestlyg-leetcode.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/fs-extra": "^9.0.1",
    "@vuepress/plugin-active-header-links": "^1.5.4",
    "@vuepress/plugin-back-to-top": "^1.5.4",
    "commitizen": "^4.1.1",
    "cz-conventional-changelog": "^3.2.0",
    "execa": "^4.0.2",
    "fs-extra": "^9.0.1",
    "git-cz": "^4.3.1",
    "git-webhook-handler": "^1.0.6",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.3",
    "vuepress": "^1.5.4"
  }
}
